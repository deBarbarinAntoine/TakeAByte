<div class="cart-product">
    <div class="product-img-info">
        <div class="product-img">
            <img src="/static/img/products/<%= product.img %>"
                 onerror="this.onerror=null;this.src='/static/img/image-not-found.webp'" alt="<%= product.name %> image" />
        </div>
        <div class="product-info">
            <div class="product-name"><%= product.name %></div>
            <a class="remove-link">Remove</a>
        </div>
    </div>
    <div class="product-price"><%= product.price %></div>
    <div class="quantity-ctn">
        <div class="quantity">
            <div class="minus"><div class="text">-</div></div>
            <div class="product-quantity"><div class="text"><%= product.quantity %></div></div>
            <div class="plus"><div class="text">+</div></div>
        </div>
    </div>
    <div class="product-total"><%= product.totalPrice %></div>
</div>